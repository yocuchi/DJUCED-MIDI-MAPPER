{
  "name": "djuced-midi-mapper",
  "version": "1.0.0",
  "description": "Application for mapping MIDI controllers to DJUCED format",
  "main": "dist/main/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on dist/main/main/main.js dist/renderer/app.js && electron .\"",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:renderer": "webpack --mode development --watch",
    "start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "midi",
    "djuced",
    "mapper",
    "dj"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "easymidi": "^3.1.0"
  }
}
